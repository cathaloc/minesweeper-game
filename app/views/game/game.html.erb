<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">

  <title>Minesweeper</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.6.1/css/bulma.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="/stylesheets/minesweeper.css">
</head>

<body>
  <div class="box game-canvas">
    <table class="minefield">
      <tbody>
        <% @game.y_size.times do |y| %>
          <tr>
            <% @game.x_size.times do |x| %>
              <td is="minefield-tile" x="<%= x %>" y="<%= y %>"></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.5.9/vue.js" type="text/javascript"></script>
  <script src="javascripts/app.js" type="text/javascript"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.17.1/axios.js" type="text/javascript"></script>
</body>
</html>
